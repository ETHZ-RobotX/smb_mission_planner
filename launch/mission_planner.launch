<?xml version="1.0"?>
<launch>
  <arg name="config_file" default="$(find smb_mission_planner)/configs/my_config.yaml"/>
  <arg name="waypoint_topic_name" default="/move_base_simple/waypoint"/>
  <arg name="base_pose_topic_name" default="/base_pose_measured"/>
  <arg name="enable_viewer" default="false"/>

  <node pkg="smb_mission_planner"
        type="mission_planner_node.py"
        name="mission_planner_node"
        output="screen"
        args="$(arg config_file) $(arg waypoint_topic_name) $(arg base_pose_topic_name)">
  </node>

  <group if="$(arg enable_viewer)">
    <node pkg="smach_viewer"
      type="smach_viewer.py"
      name="smach_viewer_node"
      output="screen"
      args="">
    </node>
  </group>

</launch>
